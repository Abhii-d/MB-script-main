{
  "name": "mb-script-main",
  "version": "1.0.0",
  "description": "TypeScript Node.js project for monitoring Muscle Blaze whey protein prices with Telegram alerts",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["typescript", "nodejs", "price-monitoring", "telegram-bot", "web-scraping"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "development": {
      "guidelines": "./DEVELOPMENT_GUIDELINES.md",
      "cursorrules": "./.cursorrules",
      "copilotInstructions": "./.github/copilot-instructions.md"
    }
  }
}
