# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_MAX_RETRIES=3
TELEGRAM_RETRY_DELAY=1000

# HealthKart API Configuration
HEALTHKART_BASE_URL=https://www.healthkart.com
HEALTHKART_REQUEST_DELAY_MS=1000
HEALTHKART_MAX_RETRIES=3
HEALTHKART_DEFAULT_CATEGORY=SCT-snt-pt-wp

# Product Filtering Configuration
PRODUCT_MIN_DISCOUNT=10
PRODUCT_IN_STOCK_ONLY=true
PRODUCT_MIN_REVIEWS=1
PRODUCT_MIN_RATING=3.5
PRODUCT_MAX_PRICE=10000
PRODUCT_BRANDS=muscleblaze,optimum nutrition,dymatize,gnc,ON,Fuel One,bsn,muscletech
PRODUCT_CATEGORIES=wheyProtein,Whey Proteins,Whey Protein

# API Endpoint Configuration
API_REQUEST_TIMEOUT_MS=30000
API_MAX_PRODUCTS_PROCESS=100
API_MAX_PRODUCTS_ALERT=5
API_ENABLE_DRY_RUN=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/mb-script.log

# Development/Production Mode
NODE_ENV=development 